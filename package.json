{
  "name": "opensrc",
  "version": "0.6.0",
  "description": "Fetch source code for npm packages to give coding agents deeper context",
  "type": "module",
  "bin": {
    "opensrc": "./src/index.ts"
  },
  "files": [
    "src",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vercel-labs/opensrc"
  },
  "scripts": {
    "dev": "bun src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "format": "oxfmt --write src/",
    "format:check": "oxfmt --check src/",
    "typecheck": "tsgo --noEmit"
  },
  "keywords": [
    "cli",
    "source-code",
    "npm",
    "packages",
    "ai",
    "coding-agents"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "commander": "^12.1.0",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/node": "^22.10.0",
    "oxfmt": "^0.26.0",
    "@typescript/native-preview": "^7.0.0-dev.20260120.1"
  },
  "engines": {
    "bun": ">=1.3.0"
  }
}
