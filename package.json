{
  "name": "opensrc",
  "version": "0.6.0",
  "description": "Fetch source code for npm packages to give coding agents deeper context",
  "type": "module",
  "bin": {
    "opensrc": "./src/index.ts"
  },
  "files": [
    "src",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vercel-labs/opensrc"
  },
  "scripts": {
    "dev": "bun src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "cli",
    "source-code",
    "npm",
    "packages",
    "ai",
    "coding-agents"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "commander": "^12.1.0",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/node": "^22.10.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "bun": ">=1.3.0"
  }
}
